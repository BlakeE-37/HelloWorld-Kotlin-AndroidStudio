<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quizd_blue"
    android:screenOrientation="landscape">


    <TextView
        android:id="@+id/Limiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Time Limit:"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/animals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:background="@drawable/category_button_shape"
        android:fontFamily="@font/roboto_medium"
        android:text="60 Seconds"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/places"
        app:layout_constraintTop_toTopOf="@+id/places"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:background="@drawable/category_button_shape"
        android:fontFamily="@font/roboto_medium"
        android:text="45 Seconds"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/movies"
        app:layout_constraintTop_toTopOf="@+id/movies" />

    <Button
        android:id="@+id/movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/category_button_shape"
        android:fontFamily="@font/roboto_medium"
        android:text="30 Seconds"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>